<div class="card-category relative">
    <a href="" class="card-category__images block relative h-[190px] md:h-[260px]">
        <img src="../../images/catalog/1.png" alt="" class="object-contain m-auto w-full h-full">
        {{#if card_discont}}
            <span class="absolute bottom-0 bg-pink px-1 py-[3px] text-xs text-white w-max rounded-[5px] font-bold left-[12px] bottom-[12px]">{{card_discont}}</span>
        {{/if}}
    </a>
    <div class="h-[calc(100%-190px)] md:h-[calc(100%-260px)] flex flex-col justify-between p-[5px]">
        <a href="" class="mt-2 text-sm hover:underline card-category__title">{{card_title}}
            {{> ../app-tooltip/tooltip2 }}
        </a>
        <div class="mt-1">
            <div class="flex items-center justify-between">
                <div class="flex flex-col sm:flex-row sm:items-center">
                    <a href="" class="text-tiny font-semibold">{{card_price}} <span class="font-light text-grey50 ml-1 text-small">₽</span></a>
                    {{#if card_price_old}}
                        <a href="" class="line-through text-grey50 sm:ml-1">{{card_price_old}}</a>
                    {{/if}}
                 </div>
                <div class="flex card-category__action">
                    <a href="" class="block">
                        {{> ../app-tooltip/tooltip-comparison }}
                    </a>
                    <a href="" class="block ml-9">
                        {{> ../app-tooltip/tooltip-like }}
                    </a>
                </div>
            </div>
            <p class="text-[11px] text-greyElem">От Lamoda</p>
        </div>
    </div>
</div>
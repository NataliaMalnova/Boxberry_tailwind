<header class="header-main pt-3 w-full">
    <div class="container">
        <div class="flex flex-col sm:flex-row justify-between items-center h-full">
            <div class="header-top flex sm:flex-row-reverse items-center sm-max:w-full sm-max:justify-between">
                <div>
                    {{> ../app-catalog/catalog}}
                </div>
                <div class="hidden sm:flex items-center cursor-pointer lg:ml-6 md:ml-4 ml-3 lg:pl-3 lg:mr-6 md:mr-4 mr-3 lg:pr-3" data-show-modal="overlay-city">
                    {{> ../_images/location}}
                    <p class="ml-1">Москва</p>
                </div>
                <a href="/" class="header-logo block">
                    <img src="../../images/logo.png" alt="logo" class="image-contain block">
                </a>
                <div class="flex sm:hidden">
                    <div class="header-location mr-3 cursor-pointer" data-show-modal="overlay-city">
                        {{> ../_images/location}}
                    </div>
                    {{> ../app-like/like }}
                </div>
            </div>
            <div class="header-bottom flex js--search mt-5 sm:mt-0 sm-max:w-full">
                {{> header-search}}
                <button class="btn btn-green ml-2 h-full font-bold">Хочу!</button>
            </div>
            <div class="hidden sm:flex">
                {{> ../app-like/like }}
            </div>
        </div>

    </div>
</header>


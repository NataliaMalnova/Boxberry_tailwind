            <div class="header-top flex justify-between sm:flex-row-reverse items-center sm-max:w-full">
                <div>
                    {{> ../app-catalog/catalog}}
                </div>
                <div class="hidden sm:flex items-center cursor-pointer lg:ml-6 md:ml-4 ml-3 lg:mr-6 md:mr-4 mr-3" data-show-modal="overlay-city">
